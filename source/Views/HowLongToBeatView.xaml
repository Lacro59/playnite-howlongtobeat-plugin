<UserControl x:Class="HowLongToBeat.Views.HowLongToBeatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:HowLongToBeat.Controls"
             xmlns:local="clr-namespace:HowLongToBeat.Views"
             xmlns:conv="clr-namespace:HowLongToBeat.Views.Converters"
             xmlns:converters="clr-namespace:CommonPlayniteShared.Converters"
             mc:Ignorable="d"
             Width="900"
             Height="400"
             d:DataContext="{d:DesignInstance local:HowLongToBeatViewData}">

    <UserControl.Resources>
        <converters:PlayTimeToStringConverter x:Key="PlayTimeToStringConverter"/>

        <SolidColorBrush x:Key="DataColorClassicBrush"
                         Color="DarkCyan"/>
        <SolidColorBrush x:Key="DataColorAverageBrush"
                         Color="RoyalBlue"/>
        <SolidColorBrush x:Key="DataColorCompletionistBrush"
                         Color="ForestGreen"/>

        <Style x:Key="IconButtonStyle"
               TargetType="Button">
            <Setter Property="Width"
                    Value="36"/>
            <Setter Property="Height"
                    Value="36"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Margin"
                    Value="0"/>
            <Setter Property="Foreground"
                    Value="{DynamicResource PrimaryButtonForegroundBrush}"/>
            <Setter Property="Background"
                    Value="{DynamicResource PrimaryButtonBackgroundBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{DynamicResource CardBorderBrush}"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="RenderTransformOrigin"
                    Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#22000000"
                                                          BlurRadius="8"
                                                          ShadowDepth="2"
                                                          Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.08"
                                                        ScaleY="1.08"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98"
                                                        ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Border DockPanel.Dock="Left"
                    Width="200"
                    Height="200"
                    CornerRadius="8"
                    Background="Transparent"
                    Margin="0"
                    SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect Color="#33000000"
                                      BlurRadius="10"
                                      ShadowDepth="4"
                                      Opacity="0.5"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1"
                                    ScaleY="1"/>
                </Border.RenderTransform>
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.03"
                                                        ScaleY="1.03"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Image x:Name="CoverImageControl"
                       Width="200"
                       Height="200"
                       Stretch="Uniform"
                       StretchDirection="Both"
                       Cursor="Hand"
                       Tag="{Binding SourceLink.Url}"
                       MouseLeftButtonUp="CoverImage_MouseLeftButtonUp"
                       Opacity="0">
                    <Image.Effect>
                        <BlurEffect Radius="8"/>
                    </Image.Effect>
                </Image>
            </Border>

            <Grid DockPanel.Dock="Right"
                  Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding GameContext.Name, FallbackValue='Game test name'}"
                           Margin="0,0,0,20"
                           FontSize="24"
                           FontWeight="Bold"
                           Style="{DynamicResource BaseTextBlockStyle}"
                           TextTrimming="CharacterEllipsis"
                           MouseEnter="TextBlock_MouseEnter">
                    <TextBlock.ToolTip>
                        <ToolTip Content="{Binding GameName}"/>
                    </TextBlock.ToolTip>
                </TextBlock>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          Margin="0,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Name="Hltb_DataType"
                                   Grid.Column="2"
                                   Grid.Row="0"
                                   FontSize="16"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                        <TextBlock Name="Hltb_El0_tb"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,5"
                                   Grid.Column="3"
                                   Grid.Row="0"
                                   FontSize="16"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        <RadioButton GroupName="DataUser"
                                     Checked="Hltb_El0_Checked"
                                     Name="Hltb_El0"
                                     Grid.Column="3"
                                     Grid.Row="0"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"/>
                        <RadioButton GroupName="DataUser"
                                     Checked="Hltb_El0_Checked"
                                     Name="Hltb_El0_1"
                                     Margin="10,0,0,0"
                                     Visibility="Collapsed"
                                     Grid.Column="4"
                                     Grid.Row="0"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"/>
                        <RadioButton GroupName="DataUser"
                                     Checked="Hltb_El0_Checked"
                                     Name="Hltb_El0_2"
                                     Margin="10,0,0,0"
                                     Visibility="Collapsed"
                                     Grid.Column="5"
                                     Grid.Row="0"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"/>
                        <RadioButton GroupName="DataUser"
                                     Checked="Hltb_El0_Checked"
                                     Name="Hltb_El0_3"
                                     Margin="10,0,0,0"
                                     Visibility="Collapsed"
                                     Grid.Column="6"
                                     Grid.Row="0"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center"/>

                        <StackPanel Name="Hltb_El1_Color"
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    Background="{DynamicResource DataColorClassicBrush}"
                                    Width="25"
                                    Height="25"/>
                        <TextBlock Name="Hltb_El1"
                                   Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{DynamicResource LOCHowLongToBeatMainStory}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El1_Data"
                                   Grid.Column="2"
                                   Grid.Row="1"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El1_DataUser"
                                   Grid.Column="3"
                                   Grid.Row="1"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El1_DataUser_1"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="4"
                                   Grid.Row="1"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El1_DataUser_2"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="5"
                                   Grid.Row="1"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El1_DataUser_3"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="6"
                                   Grid.Row="1"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <StackPanel Name="Hltb_El2_Color"
                                    Grid.Column="0"
                                    Grid.Row="2"
                                    Background="{DynamicResource DataColorAverageBrush}"
                                    Width="25"
                                    Height="25"/>
                        <TextBlock Name="Hltb_El2"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   Text="{DynamicResource LOCHowLongToBeatMainExtra}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El2_Data"
                                   Grid.Column="2"
                                   Grid.Row="2"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El2_DataUser"
                                   Grid.Column="3"
                                   Grid.Row="2"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El2_DataUser_1"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="4"
                                   Grid.Row="2"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El2_DataUser_2"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="5"
                                   Grid.Row="2"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El2_DataUser_3"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="6"
                                   Grid.Row="2"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <StackPanel Name="Hltb_El3_Color"
                                    Grid.Column="0"
                                    Grid.Row="3"
                                    Background="{DynamicResource DataColorCompletionistBrush}"
                                    Width="25"
                                    Height="25"/>
                        <TextBlock Name="Hltb_El3"
                                   Grid.Column="1"
                                   Grid.Row="3"
                                   Text="{DynamicResource LOCHowLongToBeatCompletionist}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El3_Data"
                                   Grid.Column="2"
                                   Grid.Row="3"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El3_DataUser"
                                   Grid.Column="3"
                                   Grid.Row="3"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El3_DataUser_1"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="4"
                                   Grid.Row="3"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El3_DataUser_2"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="5"
                                   Grid.Row="3"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Name="Hltb_El3_DataUser_3"
                                   Margin="10,0,0,0"
                                   Visibility="Collapsed"
                                   Grid.Column="6"
                                   Grid.Row="3"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1"
                                   Grid.Row="4"
                                   Text="{DynamicResource LOCTimePlayed}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock Grid.Column="2"
                                   Grid.Row="4"
                                   Text="{Binding GameContext.Playtime, Converter={StaticResource PlayTimeToStringConverter}}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"/>

                        <TextBlock Grid.Column="1"
                                   Grid.Row="5"
                                   Text="{DynamicResource LOCHltbRemainingTime}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock Grid.Column="2"
                                   Grid.Row="5"
                                   Name="TbRemainingTime"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"/>
                    </Grid>

                    <StackPanel Grid.Column="1">
                        <Button Style="{StaticResource IconButtonStyle}"
                                ToolTip="{DynamicResource LOCRefresh}"
                                Click="ButtonRefresh_Click"
                                Content="&#xefd1;"
                                FontFamily="{DynamicResource FontIcoFont}"
                                Tag="{Binding GameContext.Id}"/>
                        <Button Style="{StaticResource IconButtonStyle}"
                                Margin="0,10,0,0"
                                ToolTip="{DynamicResource LOCDelete}"
                                Click="ButtonDelete_Click"
                                Content="&#xee09;"
                                FontFamily="{DynamicResource FontIcoFont}"
                                Tag="{Binding GameContext.Id}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </DockPanel>

        <Grid Grid.Row="2"
              Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       FontSize="24"
                       FontWeight="Bold"
                       Text="{DynamicResource LOCHowLongToBeatProgression}"
                       Name="PART_TextBlock"
                       Style="{DynamicResource BaseTextBlockStyle}"
                       HorizontalAlignment="Center"/>

            <Grid Grid.Row="2"
                  Name="PART_GridProgressBar"
                  Height="50"
                  Tag="{Binding GameContext}">
                <Grid.Resources>
                    <conv:HoursToSegmentConverter x:Key="HoursToSegmentConverter"/>
                    <conv:PlaytimeToMarkerConverter x:Key="PlaytimeToMarkerConverter"/>
                    <conv:PlaytimeMarkerVisibilityConverter x:Key="PlaytimeMarkerVisibilityConverter"/>
                </Grid.Resources>

                <StackPanel Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="10,0"
                            HorizontalAlignment="Stretch">
                    <!-- Proportional segmented bar -->
                    <Border x:Name="ProgressBarContainer"
                            Height="14"
                            CornerRadius="7"
                            Background="#2a2a2a"
                            HorizontalAlignment="Stretch">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Seg0Fill"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0"
                                                         To="1"
                                                         Duration="0:0:0.4"/>
                                        <DoubleAnimation Storyboard.TargetName="Seg1Fill"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0"
                                                         To="1"
                                                         Duration="0:0:0.4"
                                                         BeginTime="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="Seg2Fill"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0"
                                                         To="1"
                                                         Duration="0:0:0.4"
                                                         BeginTime="0:0:0.16"/>
                                        <DoubleAnimation Storyboard.TargetName="Seg0Fill"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         From="0"
                                                         To="1"
                                                         Duration="0:0:0.4"/>
                                        <DoubleAnimation Storyboard.TargetName="Seg1Fill"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         From="0"
                                                         To="1"
                                                         Duration="0:0:0.4"
                                                         BeginTime="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="Seg2Fill"
                                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                         From="0"
                                                         To="1"
                                                         Duration="0:0:0.4"
                                                         BeginTime="0:0:0.16"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <Grid ClipToBounds="True">
                            <Border x:Name="Seg0"
                                    Background="Transparent"
                                    Height="14"
                                    HorizontalAlignment="Left"
                                    ClipToBounds="True">
                                <Border.Width>
                                    <MultiBinding Converter="{StaticResource HoursToSegmentConverter}"
                                                  ConverterParameter="width0">
                                        <Binding Path="MainHours"/>
                                        <Binding Path="MainExtraHours"/>
                                        <Binding Path="CompletionistHours"/>
                                        <Binding ElementName="ProgressBarContainer"
                                                 Path="ActualWidth"/>
                                    </MultiBinding>
                                </Border.Width>
                                <Border.Margin>
                                    <MultiBinding Converter="{StaticResource HoursToSegmentConverter}"
                                                  ConverterParameter="left0">
                                        <Binding Path="MainHours"/>
                                        <Binding Path="MainExtraHours"/>
                                        <Binding Path="CompletionistHours"/>
                                        <Binding ElementName="ProgressBarContainer"
                                                 Path="ActualWidth"/>
                                    </MultiBinding>
                                </Border.Margin>
                                <Border x:Name="Seg0Fill"
                                        Background="{DynamicResource DataColorClassicBrush}"
                                        Height="14"
                                        HorizontalAlignment="Stretch"
                                        RenderTransformOrigin="0,0.5"
                                        Opacity="0">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="0"
                                                        ScaleY="1"/>
                                    </Border.RenderTransform>
                                </Border>
                            </Border>

                            <Border x:Name="Seg1"
                                    Background="Transparent"
                                    Height="14"
                                    HorizontalAlignment="Left"
                                    ClipToBounds="True">
                                <Border.Width>
                                    <MultiBinding Converter="{StaticResource HoursToSegmentConverter}"
                                                  ConverterParameter="width1">
                                        <Binding Path="MainHours"/>
                                        <Binding Path="MainExtraHours"/>
                                        <Binding Path="CompletionistHours"/>
                                        <Binding ElementName="ProgressBarContainer"
                                                 Path="ActualWidth"/>
                                    </MultiBinding>
                                </Border.Width>
                                <Border.Margin>
                                    <MultiBinding Converter="{StaticResource HoursToSegmentConverter}"
                                                  ConverterParameter="left1">
                                        <Binding Path="MainHours"/>
                                        <Binding Path="MainExtraHours"/>
                                        <Binding Path="CompletionistHours"/>
                                        <Binding ElementName="ProgressBarContainer"
                                                 Path="ActualWidth"/>
                                    </MultiBinding>
                                </Border.Margin>
                                <Border x:Name="Seg1Fill"
                                        Background="{DynamicResource DataColorAverageBrush}"
                                        Height="14"
                                        HorizontalAlignment="Stretch"
                                        RenderTransformOrigin="0,0.5"
                                        Opacity="0">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="0"
                                                        ScaleY="1"/>
                                    </Border.RenderTransform>
                                </Border>
                            </Border>

                            <Border x:Name="Seg2"
                                    Background="Transparent"
                                    Height="14"
                                    HorizontalAlignment="Left"
                                    ClipToBounds="True">
                                <Border.Width>
                                    <MultiBinding Converter="{StaticResource HoursToSegmentConverter}"
                                                  ConverterParameter="width2">
                                        <Binding Path="MainHours"/>
                                        <Binding Path="MainExtraHours"/>
                                        <Binding Path="CompletionistHours"/>
                                        <Binding ElementName="ProgressBarContainer"
                                                 Path="ActualWidth"/>
                                    </MultiBinding>
                                </Border.Width>
                                <Border.Margin>
                                    <MultiBinding Converter="{StaticResource HoursToSegmentConverter}"
                                                  ConverterParameter="left2">
                                        <Binding Path="MainHours"/>
                                        <Binding Path="MainExtraHours"/>
                                        <Binding Path="CompletionistHours"/>
                                        <Binding ElementName="ProgressBarContainer"
                                                 Path="ActualWidth"/>
                                    </MultiBinding>
                                </Border.Margin>
                                <Border x:Name="Seg2Fill"
                                        Background="{DynamicResource DataColorCompletionistBrush}"
                                        Height="14"
                                        HorizontalAlignment="Stretch"
                                        RenderTransformOrigin="0,0.5"
                                        Opacity="0">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="0"
                                                        ScaleY="1"/>
                                    </Border.RenderTransform>
                                </Border>
                            </Border>
                            <Border x:Name="PlaytimeMarker"
                                    Width="14"
                                    Height="14"
                                    Background="#3A3A3A"
                                    BorderBrush="White"
                                    BorderThickness="2"
                                    CornerRadius="7"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Panel.ZIndex="100"
                                    Opacity="0.9">
                                <Border.Effect>
                                    <DropShadowEffect Color="#22000000"
                                                      BlurRadius="8"
                                                      ShadowDepth="2"
                                                      Opacity="0.6"/>
                                </Border.Effect>
                                <Border.Margin>
                                    <MultiBinding Converter="{StaticResource PlaytimeToMarkerConverter}">
                                        <Binding Path="GameContext.Playtime"/>
                                        <Binding Path="CompletionistHours"/>
                                        <Binding ElementName="ProgressBarContainer"
                                                 Path="ActualWidth"/>
                                    </MultiBinding>
                                </Border.Margin>
                                <Border.Visibility>
                                    <MultiBinding Converter="{StaticResource PlaytimeMarkerVisibilityConverter}">
                                        <Binding Path="GameContext.Playtime"/>
                                        <Binding Path="CompletionistHours"/>
                                        <Binding ElementName="ProgressBarContainer"
                                                 Path="ActualWidth"/>
                                    </MultiBinding>
                                </Border.Visibility>
                                <ToolTipService.ToolTip>
                                    <TextBlock Text="{Binding GameContext.Playtime, Converter={StaticResource PlayTimeToStringConverter}}"/>
                                </ToolTipService.ToolTip>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Legend / values on the right -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,6,0,0"
                                HorizontalAlignment="Center">
                        <TextBlock Style="{DynamicResource BaseTextBlockStyle}"
                                   Foreground="{DynamicResource DataColorClassicBrush}"
                                   Text="{DynamicResource LOCHowLongToBeatMainStory}"/>
                        <TextBlock Style="{DynamicResource BaseTextBlockStyle}"
                                   Text="{Binding MainHoursFormat}"/>
                        <TextBlock Style="{DynamicResource BaseTextBlockStyle}"
                                   Foreground="{DynamicResource DataColorAverageBrush}"
                                   Margin="20,0,0,0"
                                   Text="{DynamicResource LOCHowLongToBeatMainExtra}"/>
                        <TextBlock Style="{DynamicResource BaseTextBlockStyle}"
                                   Text="{Binding MainExtraHoursFormat}"/>
                        <TextBlock Style="{DynamicResource BaseTextBlockStyle}"
                                   Foreground="{DynamicResource DataColorCompletionistBrush}"
                                   Margin="20,0,0,0"
                                   Text="{DynamicResource LOCHowLongToBeatCompletionist}"/>
                        <TextBlock Style="{DynamicResource BaseTextBlockStyle}"
                                   Text="{Binding CompletionistHoursFormat}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="{DynamicResource LOCSourceLabel}"
                       Grid.Column="0"
                       FontSize="8"/>

                <TextBlock Grid.Column="2"
                           VerticalAlignment="Center"
                           FontSize="8">
                    <Hyperlink Name="PART_SourceLink"
                               Click="PART_SourceLink_Click"
                               Tag="{Binding SourceLink.Url}">
                        <TextBlock Name="PART_SourceLabel"
                                   FontSize="8"
                                   Text="{Binding SourceLink.GameName}"/>
                    </Hyperlink>
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</UserControl >
